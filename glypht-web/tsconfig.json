{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"noEmit": true,

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"]
		}
	},
	"include": ["../node_modules/vite/client.d.ts", "src/**/*", "vite.config.ts", "site/**/*.ts", "site/**/*.tsx", "gen-api-docs.ts"]
}
